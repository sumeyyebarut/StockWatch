@model StockWatch.Models.ProductStock

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>StockMovement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class ="form-control" asp-items="ViewBag.ProductId"></select>
            </div>
            <div class="form-group">
                <label asp-for="WarehouseId" class="control-label"></label>
                <select asp-for="WarehouseId" class ="form-control" asp-items="ViewBag.ToWarehouseId"></select>
            </div>
            
            <div class="form-group">
                <label asp-for="StockQuantity" class="control-label"></label>
                <input asp-for="StockQuantity" class="form-control" />
                <span asp-validation-for="StockQuantity" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="CriticalStock" class="control-label"></label>
                <input asp-for="CriticalStock" class="form-control" />
                <span asp-validation-for="CriticalStock" class="text-danger"></span>
            </div>
           
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

